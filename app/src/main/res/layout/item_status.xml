<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="80dp">

    <ImageView
            android:id="@+id/imgStatus"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="35dp"
            tools:layout_editor_absoluteX="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/user_foreground"
            android:background="@drawable/img_status"
            android:scaleType="center"/>

    <TextView
            android:id="@+id/txtNome"
            android:textColor="@color/titulocontato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            tools:text="Pri"
            app:layout_constraintTop_toTopOf="@+id/imgStatus"
            app:layout_constraintStart_toEndOf="@+id/imgStatus"
            android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/txtHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="12sp"
            android:layout_marginEnd="300dp"
            tools:text="Today, 20:43"
            app:layout_constraintTop_toBottomOf="@+id/txtNome"
            app:layout_constraintStart_toEndOf="@+id/imgStatus">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>