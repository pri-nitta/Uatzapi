<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="80dp">

    <ImageView
            android:id="@+id/imgCall"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="35dp"
            tools:layout_editor_absoluteX="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/user_foreground"
            android:background="@drawable/img_background"
            android:scaleType="center"/>

    <ImageView
            android:src="@drawable/ic_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:id="@+id/imgArrow"
            android:src="@drawable/ic_diagonal_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            app:layout_constraintEnd_toStartOf="@+id/txtHorarioCall"
            app:layout_constraintTop_toBottomOf="@+id/txtNomeCall"/>
    <TextView
            android:id="@+id/txtNomeCall"
            android:textColor="@color/titulocontato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            tools:text="Eloiza"
            app:layout_constraintTop_toTopOf="@+id/imgCall"
            app:layout_constraintStart_toEndOf="@+id/imgCall"
            android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/txtHorarioCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:textSize="12sp"
            android:layout_marginEnd="300dp"
            tools:text="Today, 17:42"
            app:layout_constraintTop_toBottomOf="@+id/txtNomeCall"
            app:layout_constraintStart_toEndOf="@+id/imgCall">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>